{
  "name": "customer_library",
  "version": "1.0.0",
  "description": "Customer library",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:check": "eslint src/. --ext .js,.ts --max-warnings=0; exit 0",
    "lint:fix": "eslint --fix --max-warnings=0",
    "prettier": "prettier --write"
  },
  "keywords": [],
  "author": "NKaty",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier",
      "plugin:node/recommended",
      "plugin:import/recommended"
    ],
    "rules": {
      "semi": [
        2,
        "always"
      ],
      "prettier/prettier": [
        "error"
      ]
    },
    "env": {
      "es6": true,
      "node": true
    },
    "plugins": [
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "npm run prettier",
      "npm run lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
